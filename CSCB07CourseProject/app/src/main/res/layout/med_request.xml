<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:nestedScrollingEnabled="true">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="true"
        android:weightSum="1">

        <TextView
            android:text="Where are you experiencing discomfort?"
            android:textColor="#199e57"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <Spinner
            android:id="@+id/area_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5" />


        <TextView
            android:text="On a scale from 1-10, how would you rate your discomfort"
            android:textSize="20dp"
            android:layout_marginLeft="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:text="Extra comments the doctor would be concerned with"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <EditText
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginLeft="7dp"
            android:inputType="text"
            android:hint="Additionl Comments..."
            android:ems="10"
            android:layout_weight="1.41" />


    </LinearLayout>

</ScrollView>