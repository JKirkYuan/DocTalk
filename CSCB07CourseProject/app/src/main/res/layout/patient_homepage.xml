<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:nestedScrollingEnabled="true">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="true"
        android:weightSum="1">

        <TextView
            android:text="@string/wt_client_homepage"
            android:textColor="#2c68c9"
            android:textSize="75px"
            android:gravity="center"
            android:layout_marginTop="50px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/welcome" />

        <ImageView
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView2"
            android:layout_weight="0.26" />

        <Button
            android:background="#5174ad"
            android:textColor="#bab5b0"
            android:text="Request"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:layout_width="324dp"
            android:layout_height="wrap_content"
            android:id="@+id/makeRequest"
            android:onClick="makeMedRequest"/>

        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height= "2dp"
            android:background="#d8d8d8"
            />

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_alignParentBottom="true">

        </LinearLayout>

        <Button
            android:background="#5174ad"
            android:textColor="#bab5b0"
            android:layout_marginTop="12dp"
            android:layout_gravity="center"
            android:layout_width="324dp"
            android:text="Diagnosis"
            android:layout_height="wrap_content"
            android:id="@+id/viewDiagnosis"
            android:onClick="viewDiagnosis"/>

        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height= "2dp"
            android:background="#d8d8d8"
            />

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_alignParentBottom="true">

        </LinearLayout>

        <Button
            android:background="#5174ad"
            android:textColor="#bab5b0"
            android:layout_marginTop="12dp"
            android:text="@string/bt_log_out"
            android:layout_width="324dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/b_logout"
            android:onClick="Logout"/>

    </LinearLayout>

</ScrollView>